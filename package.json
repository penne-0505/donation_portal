{
  "name": "donation-portal",
  "version": "0.1.0",
  "private": true,
  "description": "Donation Portal Cloudflare Pages foundation",
  "type": "module",
  "engines": {
    "node": "^18.18.0 || ^20.0.0"
  },
  "scripts": {
    "lint": "node scripts/run-eslint.cjs .",
  "test": "rm -rf dist && node scripts/run-tsc.cjs --project tsconfig.json && node --experimental-global-webcrypto --test dist/tests",
  "test:coverage": "rm -rf dist && node scripts/run-tsc.cjs --project tsconfig.json && node --experimental-global-webcrypto --test --experimental-test-coverage dist/tests",
    "typecheck": "node scripts/run-tsc.cjs --noEmit",
    "ui:dev": "next dev",
    "ui:build": "node scripts/run-next-on-pages.cjs",
    "build": "node scripts/build.cjs",
    "cf:build": "node scripts/run-wrangler-build.cjs",
    "format": "node scripts/run-prettier.cjs --check \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.ts\" \"src/**/*.ts\" \"tests/**/*.ts\" \"functions/**/*.ts\" \"public/**/*.{html,css}\" \"docs/guide/**/*.md\" README.md",
    "format:write": "node scripts/run-prettier.cjs --write \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.ts\" \"src/**/*.ts\" \"tests/**/*.ts\" \"functions/**/*.ts\" \"public/**/*.{html,css}\" \"docs/guide/**/*.md\" README.md",
    "dev": "node scripts/run-wrangler-dev.cjs",
    "prepare": "husky"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "next": "^15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "husky": "^9.1.7",
  "lint-staged": "^15.5.2",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.6.3",
    "wrangler": "^3.77.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format:write",
      "npm run lint"
    ],
    "*.{html,css}": [
      "npm run format:write"
    ],
    "docs/guide/**/*.md": [
      "npm run format:write"
    ],
    "README.md": [
      "npm run format:write"
    ]
  }
}
